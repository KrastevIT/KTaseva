@model AdminProcedureInputModel


@if (this.ViewData["alert"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @this.ViewData["alert"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}


<div class="container col-md-4">
    <h1 class="text-center">Добавяне на нова процедура</h1>
    <hr />
    <form asp-controller="Procedures" asp-action="Add" method="post" class="form-horizontal">
        <div class="form-group">
            <label>Име</label>
            <input type="text" class="form-control" asp-for="@Model.Name">
        </div>
        <div class="form-group">
            <label>Времетраене</label>
            <input type="time" class="form-control" asp-for="@Model.Duration">
        </div>
        <div class="form-group">
            <label>Цена</label>
            <input type="number" class="form-control" asp-for="@Model.Price">
        </div>
        <button type="submit" class="btn btn-primary">Добави</button>
    </form>
</div>